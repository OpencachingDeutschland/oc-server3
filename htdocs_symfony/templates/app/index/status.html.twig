{% extends 'app/base.html.twig' %}

{% block page_content %}
    <h3><br/>{{ 'Server information' | trans }}..</h3>

    {% if serverInfo is defined %}
        {% if serverInfo %}
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                <tr>
                    <th scope="col" class="asc">{{ 'Key' | trans }}</th>
                    <th scope="col" class="asc">{{ 'Value' | trans }}</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>APP_ENV</td>
                    <td>{{ serverInfo.APP_ENV }}</td>
                </tr>
                <tr>
                    <td>MAILER_DSN</td>
                    <td>{{ serverInfo.MAILER_DSN }}</td>
                </tr>
                <tr>
                    <td>PHP_VERSION</td>
                    <td>{{ serverInfo.PHP_VERSION }}</td>
                </tr>
                <tr>
                    <td>PHP_SENDMAIL_PATH</td>
                    <td>{{ serverInfo.PHP_SENDMAIL_PATH }}</td>
                </tr>
                <tr>
                    <td>XDEBUG_REMOTE_HOST</td>
                    <td>{{ serverInfo.XDEBUG_REMOTE_HOST }}</td>
                </tr>
                </tbody>
            </table>
        {% else %}
            <br/><br/>
            <span>{{ 'No server informnation available' | trans }}.. :-(</span>
        {% endif %}
    {% endif %}

    <h3><br/>{{ 'Installed composer packages' | trans }}..</h3>

    {% if composerInstalledPackages is defined %}
        {% if composerInstalledPackages %}
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                <tr>
                    <th scope="col" class="asc">{{ 'Key' | trans }}</th>
                    <th scope="col" class="asc">{{ 'Value' | trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for composerPackage in composerInstalledPackages %}
                    <tr>
                        <td>{{ composerPackage.pkgName }}</td>
                        <td>{% if composerPackage.pkgVersion %}{{ composerPackage.pkgVersion }}{% else %}null{% endif %}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <br/><br/>
            <span>{{ 'No installed composer packages found' | trans }}.. :-(</span>
        {% endif %}
    {% endif %}
{% endblock %}