{% extends 'backend/base.html.twig' %}

{% block page_content %}

    <div xmlns="http://www.w3.org/1999/html">
        <h3>Eingabe der Koordinaten im Dezimalformat..</h3>
        {% if cachesForm is defined %}
            {{ form_start(cachesForm) }}
            {{ form_widget(cachesForm) }}
            {{ form_end(cachesForm) }}
        {% endif %}

    </div>

    <hr>

    <div>
        {% if converted_coordinates is defined %}
            <h3>Koordinatenformate..</h3>

            <div>
                {% if converted_coordinates %}
                    <table class="table table-striped table-hover">
                        <tbody>
                        <tr>
                            <td>Dezimal:</td>
                            <td>{{ converted_coordinates.decimal }}</td>
                        </tr>
                        <tr>
                            <td>Dezimal Minuten:</td>
                            <td>{{ converted_coordinates.decimalMinute }}</td>
                        </tr>
                        <tr>
                            <td>Dezimal Minuten Sekunden:</td>
                            <td>{{ converted_coordinates.decimalMinuteSecond }}</td>
                        </tr>
                        <tr>
                            <td>Gauß Krüger:</td>
                            <td>{{ converted_coordinates.GK }}</td>
                        </tr>
                        <tr>
                            <td>QTH Locator:</td>
                            <td>{{ converted_coordinates.QTH }}</td>
                        </tr>
                        <tr>
                            <td>RD (Dutch Grid):</td>
                            <td>{{ converted_coordinates.RD }}</td>
                        </tr>
                        <tr>
                            <td>Swiss Grid (CH1903):</td>
                            <td>{{ converted_coordinates.CH1903 }}</td>
                        </tr>
                        <tr>
                            <td>UTM:</td>
                            <td>{{ converted_coordinates.UTM }}</td>
                        </tr>
                        <tr>
                            <td>What3Words (DE):</td>
                            <td>{{ converted_coordinates.W3W_de }}</td>
                        </tr>
                        <tr>
                            <td>What3Words (EN):</td>
                            <td>{{ converted_coordinates.W3W_en }}</td>
                        </tr>
                        </tbody>
                    </table>

                {% else %}
                    <br/><br/>
                    <span>Leider konnten keine Koordinaten umgewandelt werden.. :-(</span>
                {% endif %}
            </div>
        {% else %}
            <br/><br/>
            <span>Irgendwas ist kaputt.. :-(</span>
        {% endif %}

    </div>

    <hr>

    <div>
        <h3><br/>Koordinaten direkt abrufen mittels Breiten- und Längenangabe in der URL:</h3>
        Aufruf:<br/>
        http://try.docker.team-opencaching.de/backend/coordinate/$Latitude+$Longitude<br/>
        <br/>
    </div>

{% endblock %}
