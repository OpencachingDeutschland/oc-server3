{% extends 'backend/base.html.twig' %}

{% block page_content %}

    <div>
        <h3>{{ 'Security roles' | trans }}..</h3>
        <ul>
            <li>{{ 'You are' | trans }}: {{ app.user.username }}</li>
            <li>{{ 'id' | trans }}: {{ app.user.id }}</li>
            <li>{{ 'Your role(s)' | trans }}:
                {% for role in app.user.roles %}
                    {{ role }},
                {% endfor %}</li>
        </ul>
    </div>

    {% if is_granted('ROLE_TEAM') %}
        <hr>
        <div>
            <h3>
                <a href="{{ path('backend_roles_teamlist') }}">{{ 'Show team overview' | trans }}..</a>
            </h3>
        </div>
    {% endif %}

    <hr>
    {% if allRoles is defined %}
        {% if allRoles %}
            <h3>{{ 'List of all roles' | trans }}</h3>
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>{{ 'id' | trans }}</th>
                    <th>{{ ' ' }}</th>
                    <th>{{ 'Role' | trans }}</th>
                    <th>{{ 'Access' | trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for role in allRoles | sort %}
                    <tr>
                        <td>{{ role.id }}</td>
                        <td> &nbsp;</td>
                        <td>{{ role.role }}</td>
                        <td>{% if is_granted(role.role) %}
                                {{ '‚úîÔ∏è You have access to this ROLE' | trans }}
                            {% else %}
                                {{ 'üî¥ Sorry. You don\'t have access to this ROLE' | trans }}
                            {% endif %}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
    {% endif %}
{% endblock %}
