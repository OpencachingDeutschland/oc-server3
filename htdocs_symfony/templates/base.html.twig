    {% if app.user %}
        <div>
            <a href="{{ path('app_security_login') }}">{{ 'Login' | trans }}</a> {{ '(already logged in as' | trans }} {{ app.user.username }})
        </div>
        <div>
            <a href="{{ path('app_security_logout') }}">{{ 'Logout' | trans }}</a>
        </div>
    {% else %}
        <div>
            <a href="{{ path('app_security_login') }}">{{ 'Login' | trans }}</a>
        </div>
        <div>
            <a href="{{ path('app_security_register') }}">{{ 'Register new user' | trans }}</a>
        </div>
        <div>
            <a href="{{ path('app_security_account_activation') }}">{{ 'Activate account' | trans }}</a>
        </div>
    {% endif %}

    {% if is_granted('ROLE_TEAM') %}
        <br/>
        <a href="{{ path('backend_index_index') }}">BACKEND</a>
    {% endif %}

